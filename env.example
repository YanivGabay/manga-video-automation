# OpenRouter API (required for AI analysis)
OPENROUTER_API_KEY=your_openrouter_api_key

# Freesound API (optional, for background music)
FREESOUND_API_KEY=your_freesound_api_key

# YouTube OAuth (required for upload)
# Run: python get_youtube_refresh_token.py to get these
YT_CLIENT_ID=your_youtube_client_id
YT_CLIENT_SECRET=your_youtube_client_secret
YT_REFRESH_TOKEN=your_youtube_refresh_token

# YouTube channel settings
CHANNEL_DEFAULT_TAGS=manga,anime,shorts,recap

# GitHub (required for automation)
GH_TOKEN=your_github_personal_access_token
TRACKER_GIST_ID=your_tracker_gist_id
CACHE_REPO=YanivGabay/manga-video-cache
